{
  "name": "KOL Patreon Tracker",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "An extenssion that helps manage and track KOL's patreon reaction content.",
  "icons": {
    "16": "icons/icon16x16.png",
    "32": "icons/icon32x32.png",
    "48": "icons/icon48x48.png",
    "128": "icons/icon128x128.png"
  },
  "action": {
    "default_icon": "icons/icon128x128.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://www.patreon.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}